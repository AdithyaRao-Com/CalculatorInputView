<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:text="New Text" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        app:columnCount="4"
        app:orientation="horizontal">

        <Button
            android:id="@+id/clear_button"
            android:text="C"
            app:layout_column="0" />

        <Button
            android:id="@+id/divider_button"
            android:text="รท"
            app:layout_column="1" />

        <Button
            android:id="@+id/multiplication_button"
            android:text="x"
            app:layout_column="2" />

        <Button
            android:id="@+id/delete_button"
            android:text="<"
            app:layout_column="3"
            app:layout_gravity="fill" />

        <Button
            android:id="@+id/seven_button"
            android:text="7" />

        <Button
            android:id="@+id/eight_button"
            android:text="8" />

        <Button
            android:id="@+id/nine_button"
            android:text="9" />

        <Button
            android:id="@+id/subtraction_button"
            android:text="-"
            app:layout_gravity="fill" />

        <Button
            android:id="@+id/four_button"
            android:text="4" />

        <Button
            android:id="@+id/five_button"
            android:text="5" />

        <Button
            android:id="@+id/six_button"
            android:text="6" />

        <Button
            android:id="@+id/sum_button"
            android:text="+"
            app:layout_gravity="fill" />

        <Button
            android:id="@+id/one_button"
            android:text="1" />

        <Button
            android:id="@+id/tow_button"
            android:text="2" />

        <Button
            android:id="@+id/three_button"
            android:text="3" />

        <Button
            android:id="@+id/equal_button"
            android:text="="
            app:layout_gravity="fill"
            app:layout_rowSpan="2" />

        <Button
            android:id="@+id/zero_button"
            android:text="0" />

        <Button
            android:id="@+id/three_zero_button"
            android:text="000" />

        <Button
            android:id="@+id/point_button"
            android:text="." />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>